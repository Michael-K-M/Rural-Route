             x:Class="Rural_Route.Views.ToDoGridRow">

    <StackLayout HorizontalOptions="FillAndExpand" Margin="10,0,10,0">

        
        <HorizontalStackLayout>
                <!-- Row 1 -->
            
                <CheckBox IsChecked="False" x:Name="cb_Completed" Color="Black" VerticalOptions="Center"/>
            

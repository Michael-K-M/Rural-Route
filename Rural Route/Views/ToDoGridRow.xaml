<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rural_Route.Views.ToDoGridRow">

    <StackLayout HorizontalOptions="FillAndExpand" Margin="10,0,10,0">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <!-- Row 1 -->
            <Frame Grid.Column="0" BorderColor="Black" Padding="1" CornerRadius="0">
                <CheckBox IsChecked="False" x:Name="cb_Completed"/>
            </Frame>

            <Frame Grid.Column="1" BorderColor="Black" Padding="1" CornerRadius="0" IsVisible="True">
                <Label x:Name="Description" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
            </Frame>


        </Grid>



    </StackLayout>
</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rural_Route.AdminCreateProduct"
             Title="AdminCreateProduct">
    
    
    <VerticalStackLayout>
        <Label 
        Text="Lets create a new product"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <!-- name Information-->
        <Label Grid.Row="2" Text="Enter product name:" FontSize="16" FontAttributes="Bold"/>

        <Entry Placeholder="name" x:Name="txt_productName" BackgroundColor="#c7dbe0" TextColor="#578794"/>

        <!-- Surname Information-->
        <Label Grid.Row="2" Text="Enter product price:" FontSize="16" FontAttributes="Bold"/>

        <Entry Placeholder="surname" x:Name="txt_productPrice" BackgroundColor="#c7dbe0" TextColor="#578794"/>


        <!-- Email Information-->
        <Label Grid.Row="2" Text="Enter quantity of product" FontSize="16" FontAttributes="Bold"/>

        <Entry Placeholder="Username" x:Name="txt_productQuantity" BackgroundColor="#c7dbe0" TextColor="#578794"/>

        
       

        <Button Text="Add Product"
            
            VerticalOptions="Center"
            HorizontalOptions="Center"
             />


    </VerticalStackLayout>
</ContentPage>
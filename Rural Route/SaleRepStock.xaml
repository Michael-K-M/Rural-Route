<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rural_Route.SaleRepStock"
             Title="SaleRepStock"  BackgroundColor="White">
    <VerticalStackLayout>

        <Label 
    Text="Stock Count"
    VerticalOptions="Center" 
    HorizontalOptions="Center" 
    FontSize="25"
    TextColor="Black"/>
        
        
        <ScrollView VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="150">
            <StackLayout x:Name="GridDisplayStock" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">

            </StackLayout>
        </ScrollView>
        

        <ScrollView VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="250">
            <StackLayout x:Name="GridDisplay" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">

            </StackLayout>
        </ScrollView>

        <Button Text="Add Stock"
     Pressed="Button_Pressed"
    VerticalOptions="EndAndExpand"
    HorizontalOptions="Center"
    BackgroundColor="LightGray"
    TextColor="Black"
     />
    </VerticalStackLayout>
</ContentPage>
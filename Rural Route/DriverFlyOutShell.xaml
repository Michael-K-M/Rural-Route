<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rural_Route.DriverFlyOutShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rural_Route"
    Shell.FlyoutBehavior="Flyout"
    BackgroundColor="DarkOliveGreen">

    <ShellContent
        Title="Homepage"
        ContentTemplate="{DataTemplate local:DriverHomepage}"
        Route="DriverHomepage" />


    <ShellContent
        Title="Select Order"
        ContentTemplate="{DataTemplate local:DriverSelectOrder}"
        Route="DriverSelectOrder" />

    <ShellContent
    Title="Complete Order"
    ContentTemplate="{DataTemplate local:DriverEndOrder}"
    Route="DriverEndOrder" />


    <ShellContent
        Title="Logout"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rural_Route.AdminCreateCustomer"
             Title="AdminCreateCustomer">
   
    
    <VerticalStackLayout>
        <Label 
    Text="Lets create a new product"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />

        <!-- Product Name-->
        <Label Grid.Row="2" Text="Enter Customer name:" FontSize="16" FontAttributes="Bold"/>

        <Entry Placeholder="Customer Name:" x:Name="txt_CustomerName" BackgroundColor="#c7dbe0" TextColor="#578794"/>

       


        <Button Text="Add Product"
         Clicked="Button_Clicked"
        VerticalOptions="Center"
        HorizontalOptions="Center"
         />
        </VerticalStackLayout>
</ContentPage>
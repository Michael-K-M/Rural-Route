<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rural_Route.AdminCreateCustomer"
             Title="AdminCreateCustomer" BackgroundColor="White">
   
    
    <VerticalStackLayout>
        <Label 
    Text="Lets create a new product"
    VerticalOptions="Center" 
    HorizontalOptions="Center" 
             FontSize="25"
            TextColor="Black"/>

        <!-- Product Name-->
        <Label Grid.Row="2" Text="Enter Customer name:" FontSize="16" FontAttributes="Bold" TextColor="Black"/>

        <Entry Placeholder="Customer Name:" x:Name="txt_CustomerName" BackgroundColor="#c7dbe0" TextColor="Black"/>

       


        <Button Text="Add Product"
        Clicked="Button_Clicked"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        BackgroundColor="LightGray"
        TextColor="Black"
         />
        </VerticalStackLayout>
</ContentPage>